<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_list_bottom_line"
    android:paddingStart="17dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="13dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="周铭民"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/tv_name"
        android:includeFontPadding="false"
        android:text="13672222222"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:includeFontPadding="false"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:text="默认"
        android:textColor="#ffe8210e"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:includeFontPadding="false"
        android:text="广东省 广州市 番禺区 南村镇 大众街道 个别村 8巷 125号"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_coupon_bg"
        android:includeFontPadding="false"
        android:paddingStart="31dp"
        android:paddingTop="8dp"
        android:paddingEnd="31dp"
        android:paddingBottom="8dp"
        android:text="编辑"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address"
        android:layout_alignTop="@id/tv_edit"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/tv_edit"
        android:background="@drawable/shape_coupon_bg"
        android:includeFontPadding="false"
        android:paddingStart="31dp"
        android:paddingTop="8dp"
        android:paddingEnd="31dp"
        android:paddingBottom="8dp"
        android:text="删除"
        android:textColor="#ff999999"
        android:textSize="14sp" />
</RelativeLayout>